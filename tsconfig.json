        "./src/**/*",
        "./node_modules/types-bn/index.d.ts",
    ],
    "exclude": [
        "node_modules/**/*",
    ],
    "skipLibCheck": true,
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "lib",
        "noImplicitThis": false,
        "module": "commonjs",
        "target": "es2020",
        "typeRoots": [
            "./typings"
